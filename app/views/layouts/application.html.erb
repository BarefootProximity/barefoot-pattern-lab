<!DOCTYPE html>
<html>
    <head>
        <title>Barefoot Pattern Lab</title>
        <%= csrf_meta_tags %>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <div class="menu-toggle">
            <div class="hamburger top"></div>
            <div class="hamburger middle"></div>
            <div class="hamburger bottom"></div>
        </div>
        <div class="menu center-text">
            <div class="main-menu option-holder">
                <div class="menu-option show-atoms">Atoms</div>
                <div class="menu-option show-molecules">Molecules</div>
                <div class="menu-option show-organisms">Organisms</div>
                <div class="menu-option add-new">Add New</div>
            </div>
            <div class="add-new-menu option-holder hide">
                <a href="<%= atoms_new_path %>">
                    <div class="menu-option">New Atom</div>
                </a>
                <div class="menu-option">New Molecule</div>
                <div class="menu-option">New Organism</div>
            </div>
        </div>
        <%= yield %>
    </body>
</html>
